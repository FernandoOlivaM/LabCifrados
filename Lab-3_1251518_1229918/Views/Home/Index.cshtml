@{
    Layout = null;
}
<style>
    h1 {
        color: wheat;
        font-weight: bold;
    }

    body {
        background-color: #4C2222;
    }
    #espiral {
        background-color: #ff7373;
        border: none;
        color: white;
        padding: 8px 16px;
