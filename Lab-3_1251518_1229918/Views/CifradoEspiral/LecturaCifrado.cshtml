@{
    Layout = null;
}
<style>
    h1, label {
        color: wheat;
        font-weight: bold;
    }

    body {
        background-color: #4C2222;
    }

    #seleccionarArchivo {
        background-color: #ff7373;
        border: none;
        color: white;
        padding: 8px 16px;
        text-decoration: none;
        margin: 4px 2px;
        cursor: pointer;
        text-align: center;
        font-weight: bold;
    }

    #cargar {
        background-color: #e56767;
        border: none;
        color: white;
        padding: 8px 16px;
        text-decoration: none;
        margin: 4px 2px;
        cursor: pointer;
        text-align: center;
        font-weight: bold;
    }

    #volver {
        background-color: #331717;
        border: none;
        color: white;
        padding: 8px 16px;
        text-decoration: none;
        margin: 4px 2px;
        cursor: pointer;
        text-align: center;
        font-weight: bold;
    }

    input[type=number] {
        padding: 5px 20px;
        margin: 8px 0;
        border: 1px solid #555;
        outline: none;
        font-weight: bold;
        width: 80px;
    }

    input[type=number]:focus {
        background-color: #ffe3e3;
    }

</style>

<body>
    <center>
        <h1>Por favor, seleccione el archivo que desea cifrar.</h1>

        @using (Html.BeginForm("LecturaCifrado", "CifradoEspiral", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <input id="seleccionarArchivo" type="file" name="postedFile" /><br />
            <label>Dimensiones de la matriz:</label><br />
            <label>M: <input type="number" min="2" id="m" name="m" value="" /></label><br />
            <label>N: <input type="number" min="2" id="n" name="n" value="" /></label><br />
            <label>Dirección: </label><select name="direccion" id="direccion"><option value="0">Derecha</option><option value="1">Izquierda</option></select><br />
            <input id="cargar" type="submit" value="Cifrar Archivo" />
        }
        <form action="~/CifradoZigZag/index">
            <input id="volver" type="submit" value="Volver Al Menú de Cifrado ZigZag" />
        </form>
    </center>
</body>
